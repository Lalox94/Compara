<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="10dp"
        android:id="@+id/testing">
        <ImageButton
            android:id="@+id/list_item_producto_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/list_item_precio_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/list_item_producto_image"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <ImageButton
            android:id="@+id/list_item_tienda_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/list_item_precio_textview"
            android:layout_weight="1"/>
        <CheckBox
            android:id="@+id/list_item_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/list_item_tienda_image"
            android:layout_margin="30dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>